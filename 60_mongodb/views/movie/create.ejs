
<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
<body>

  <!-- Start your project here-->  
  <%- include("../menu") %>

  <!-- 등록 시작 -->

  
<form id="createForm">
    <div style="margin:10px;">
    <!-- Material input -->
        <div class="md-form">
            <input 
                type="text"
                id="title" 
                class="form-control"
                required
            />
            <label for="title">Input Title</label>
        </div>

        <!-- Material input -->
        <div class="md-form">
            <input 
                type="text"
                id="director" 
                class="form-control"
                required
            />
            <label for="director">Input Director</label>
        </div>

        <div class="md-form">
            <input 
                type="text"
                id="year" 
                class="form-control"
                required
            />
            <label for="year">Input Year</label>
        </div>
    </div>

    <button 
        type="submit" 
        class="btn btn-dark"
        >
        Create
    </button>
</form>
  

  <!-- 등록 끝 -->

  <!-- End your project here-->

  <%- include("../footer") %>

  <script>
      $(function() {
          $("#createForm").submit((event) => {
              event.preventDefault();
              //등록
              const title = $("#title").val();
              const director = $("#director").val();
              const year = $("#year").val();

              $.ajax({
                  url:"/api/movie",
                  type: "POST", //post
                  data: { title, director, year }
              })
              .done(() => {
                  location.href = "/api/movie";
              })
              .fail((request, status, error) => {
                  alert(request.responseText);
              });
          });
      });
  </script>

</body>
</html>
